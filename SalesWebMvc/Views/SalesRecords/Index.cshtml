@{
    ViewData["Title"] = "Registros de vendas";
}

<h2>@ViewData["Title"]</h2>
<div class="container">
    <div class="row-no-gutters">
        <div class="col-md-4">
            <form class="form-horizontal" asp-action="SimpleSearch">
                <fieldset>
                    <legend>Busca Simples</legend>
                    <div class="form-group">
                        <label for="minDate" class="col-lg-2 control-label">Data Inicial</label>
                        <div class="col-lg-10">
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="maxDate" class="col-lg-2 control-label">Data Final</label>
                        <div class="col-lg-10">
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

    <div class="col-md-2"></div>

    <div class="row">
        <div class="col-md-5">
            <form class="form-horizontal" asp-action="GroupingSearch">
                <fieldset>
                    <legend>Pesquisa por Departamento</legend>
                    <div class="form-group">
                        <label for="minDate" class="col-lg-2 control-label">Data Inicial</label>
                        <div class="col-lg-10">
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="maxDate" class="col-lg-2 control-label">Data Final</label>
                        <div class="col-lg-10">
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>